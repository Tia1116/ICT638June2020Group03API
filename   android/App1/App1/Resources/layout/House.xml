
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtrenthouse1"
        android:text="city 247"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button3"/>

        <Button
        android:id="@+id/button5"
        android:text="Maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtrenthouse1"/>


    <ImageView
        android:id="@+id/imageView1"
        android:layout_gravity="center_vertical"
        android:src="@drawable/House1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtrenthouse1"/>

    <TextView
        android:id="@+id/txtrenthouse1bedroom"
        android:layout_below="@id/imageView1"
        android:text="This is bedroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textSize="14dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtrenthouse1bedroomrespond"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_below="@id/txtrenthouse1bedroom"/>

    <TextView
        android:id="@+id/txtrenthouse1address"
        android:text="This is address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14dp" 
        android:layout_below="@id/txtrenthouse1bedroomrespond"/>

    <TextView
        android:id="@+id/txtrenthouse1addressrespond"
        android:textSize="14dp" 
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtrenthouse1address"/>

    <TextView
        android:id="@+id/txtrenthouse1kitchendetail"
        android:layout_below="@id/txtrenthouse1addressrespond"
        android:text="This is kitchen"
        android:textSize="14dp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txthouse1kitchenrespond"
        android:layout_below="@id/txtrenthouse1kitchendetail"
        android:textStyle="bold|italic"
        android:textSize="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtrenthouse1pay"
        android:text="This is payment"
        android:textSize="14dp"
        android:textStyle="bold|italic"
         android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txthouse1kitchenrespond"/>

     <TextView
        android:id="@+id/txtrenthouse1payrespond"
        android:layout_below="@id/txtrenthouse1pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/renthouse1moredetail"
        android:text="This house is for rent about 365dollars per week"
        android:layout_below="@id/txtrenthouse1payrespond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>